{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",

  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": false,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": false,
    "objectLiteralShorthandMethods": false,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "regexUFlag": false,
    "regexYFlag": false,
    "spread": true,
    "superInFunctions": false,
    "templateStrings": true,
    "unicodeCodePointEscapes": true,
    "globalReturn": true,
    "jsx": true
  },

  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "no-cond-assign": [2, "except-parens"],
    "no-extra-parens": [2],
    "valid-jsdoc": [2, {
      "requireParamDescription": false,
      "requireReturn": false
    }],
    "quotes": [2, "single"],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "eqeqeq": [2, "allow-null"],
    "guard-for-in": [2],
    "no-else-return": [2],
    "no-throw-literal": [2],
    "no-void": [2],
    "radix": [2],
    "vars-on-top": [2],
    "wrap-iife": [2, "outside"],
    // Strict mode is set by browserify
    "strict": [2, "never"],
    "no-catch-shadow": [2],
    "no-use-before-define": [2, "nofunc"],

    // Stylistic
    "indent": [1, 4],
    "brace-style": [1, "stroustrup", { "allowSingleLine": true }],
    "camelcase": [1, {"properties": "always"}],
    "comma-style": [1, "last"],
    "consistent-this": [1, "self"],
    "eol-last": [1],
    // "func-names": [1],
    "newline-after-var": [1, "always"],
    "no-inline-comments": [1],
    "no-lonely-if": [2],
    "no-multi-spaces": [0],
    "no-spaced-func": [2],
    "one-var": [2, "always"],
    "operator-linebreak": [1, "before"],
    "quotes": [2, "single"],
    "sort-vars": [0],
    "space-after-keywords": [1, "always"],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "always"],
    "space-in-parens": [1, "never"],
    "spaced-line-comment": [1, "always"],
    "yoda": [1, "always", { "exceptRange": true }]
  }
}